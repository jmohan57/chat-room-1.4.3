{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Next.js",
    "extends": "./tsconfig-base.json",
    "compilerOptions": {
        "plugins": [{ "name": "next" }],
        "allowJs": true,
        "declaration": false,
        "declarationMap": false,
        "incremental": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "noEmit": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "es5"
    },
    "exclude": ["node_modules"]
}
